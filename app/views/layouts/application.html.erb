<%# Our "base" layout should be a valid HTML document. %>
<!DOCTYPE html>
<html>
<head>
  <title>Buddies</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
  <%= stylesheet_link_tag 'application', 'media' => 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<%# These classes come from the Bootstrap CSS framework. %>
<nav class="navbar navbar-expand-lg bg-primary text-white mb-3">
  <h1 class="title">Buddies</h1> 
  <%= link_to "Home", events_path, :class => 'btn btn-primary' %>
<% if user_signed_in? %>
  <%= link_to "My Profile", user_path(current_user), :class => 'btn btn-primary' %>
  <%# <%= link_to "My Profile", profile_path(current_user), :class => 'btn btn-primary' %>
  <%= button_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'btn btn-primary'%>
  <%= link_to "Events Joined", show_events_joined_path(current_user), :class => 'btn btn-primary' %>
  <%= link_to "Events Posted", show_events_posted_path(current_user), :class => 'btn btn-primary' %>
<% else %>
  <%= link_to "Sign In", new_user_session_path, :class => 'btn btn-primary' %>
  <%= link_to "Sign Up", new_user_registration_path, :class => 'btn btn-primary' %>
<% end %>
</nav>
<div class="container">
  <%# Render "flash" messages in our application. This loads _flash.erb %>
  <%= render 'layouts/flash' %>
  <main id="main">
    <%= yield %>
  </main>
</div>
</body>
</html>
