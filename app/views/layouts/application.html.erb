<%# Our "base" layout should be a valid HTML document. %>
<!DOCTYPE html>
<html>
<head>
  <title>Buddies</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
  <%= stylesheet_link_tag 'application', 'media' => 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script src="https://kit.fontawesome.com/31b069ded3.js" crossorigin="anonymous"></script>
</head>
<body>
<%# These classes come from the Bootstrap CSS framework. %>
<nav class="navbar navbar-expand-lg bg-white bg-gradient text-white mb-3 mt-3">
  <div class="container">
      <h1 class="title text-warning">
        <i class="fa-solid fa-people-group"></i>Buddies
      </h1>
      <%= button_to events_path, { method: :get, class: "text-dark btn btn-outline-warning"} do %>
        <i class="fa-solid fa-house mr-2" style="color:black"></i>Home
      <% end %>

      <% if user_signed_in? %>
        <%= button_to show_events_joined_path(current_user), { method: :get, class: "text-dark btn btn-outline-warning"} do %>
          <i class="fa-solid fa-calendar-days mr-2" style="color:black"></i>Joined
        <% end %>

        <%= button_to show_events_posted_path(current_user), { method: :get, class: "text-dark btn btn-outline-warning"} do %>
          <i class="fa-solid fa-pen mr-2" style="color:black"></i>Posted
        <% end %>

        <%= button_to user_path(current_user), { method: :get, class: "text-dark btn btn-outline-warning"} do %>
          <i class="fa-solid fa-address-card mr-2" style="color:black"></i>Profile
        <% end %>

        <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "text-dark btn btn-outline-warning"%>
      <% else %>

        <%= button_to new_user_session_path, { method: :get, class: "text-dark btn btn-outline-warning"} do %>
          <i class="fa-solid fa-user mr-2" style="color:black"></i>Sign In
        <% end %>

        <%= button_to new_user_registration_path, { method: :get, class: "text-dark btn btn-outline-warning"} do %>
          <i class="fa-solid fa-user-plus mr-2" style="color:black"></i>Sign Up
        <% end %>
      <% end %>
  </div>
</nav>
<hr/>
<div class="container">
  <%# Render "flash" messages in our application. This loads _flash.erb %>
  <%= render 'layouts/flash' %>
  <main id="main">
    <%= yield %>
  </main>
</div>
</body>
</html>
