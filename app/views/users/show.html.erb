<p style="color: green"><%= notice %></p>
<div class="d-flex flex-row">
  <i class="fa-regular fa-user fa-10x mr-5 mt-3" style="color:#ffc107"></i>
  <div>
    <div style="display:flex;">
      <div style="flex-grow: 3;"><%= render @user%></div>
    </div>

    <div class="d-flex flex-row mb-3">
      <%= link_to "Edit my profile", edit_user_path(@user), :class =>'btn btn-outline-warning mr-2' %>
      <div><%= button_to "Destroy this user", @user, method: :delete, :class => "btn btn-outline-warning" %></div>
    </div>
  </div>
</div>
